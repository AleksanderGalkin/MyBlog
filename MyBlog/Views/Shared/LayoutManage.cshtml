
@using MyBlog.Infrustructure.Helpers;
@{
    ViewBag.Title = "Управление профилем";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Управление профилем</h3>
<div class="container">
    <div class="row">

            <div id=" menu" class="col-md-2">
                <ul class="nav nav-pills nav-stacked">
                    <li class = "@Url.SetActive(null , "Edit")">@Html.ActionLink("Личные данные", "Edit")</li>
                    <li class = "@Url.SetActive(null , "ChangePassword")">@Html.ActionLink("Смена пароля", "ChangePassword")</li>
                    <li class = "@Url.SetActive(null , "ManageLogins")">@Html.ActionLink("Управление логинами", "ManageLogins")</li>                                                               
                </ul>
            </div>

        
        <div id="content" class="col-md-10">
            @RenderBody()
        </div>
    </div>
</div>

@section bundles{
    @RenderSection("bundles", required: false)
}

@section scripts{
    @RenderSection("scripts", required: false)
}