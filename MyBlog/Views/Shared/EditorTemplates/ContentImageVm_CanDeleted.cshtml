@model MyBlog.ViewModels.ContentImageVm
@using System.Drawing

        @Html.HiddenFor(x => x.ContentDataType)
        @Html.HiddenFor(x => x.PostContentId)
    <div class="form-group">
        @Html.LabelFor(x => x.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(x => x.Comment, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
<div class="form-group">
    @Html.LabelFor(x => x.ContentData, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class=" col-md-10">
            @{
                ImageConverter _imageConverter = new ImageConverter();
                byte[] xByte = (byte[])_imageConverter.ConvertTo(Model.ContentData, typeof(byte[]));
                var base64 = Convert.ToBase64String(xByte);
                var imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
            }
            <img src="@imgSrc" />
    </div>
</div>


    


