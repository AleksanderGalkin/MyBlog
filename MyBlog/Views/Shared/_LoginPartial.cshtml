@using Microsoft.AspNet.Identity
@using MyBlog.Infrustructure.Helpers
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Init", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Edit", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@
            @Html.ActionLink(User.Identity.GetFullName() , "Edit", "Manage", routeValues: new { area = "" }, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Регистрироваться", "Welcome", "Init", routeValues: new { area = "" }, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Войти", "Welcome", "Init", routeValues: new { area = "" }, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
