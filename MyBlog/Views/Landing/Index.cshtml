@model  Tuple<MyBlog.ViewModels.RegisterViewModel, MyBlog.ViewModels.LoginViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <title>My landing</title>
   
    
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/landing")

</head>
<body>
    <header class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <a href="#" ><img class="center-block" src=@Url.Content("~/Content/images/landing/Logo.png") alt="GalkinLab logo"></a>
            </div>
        </div>

    </header>
    <div id="wrapper" class="container">
        <div class='row'>
                <div id='content' class="col-md-10 col-md-offset-1 panel">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner ">
                            <div class="item active carouselImges">
                                <img class=" img-responsive center-block " src=@Url.Content("~/Content/images/landing/Content.png")
                                     style="background-image:url(../Content/images/landing/image1.jpg)"
                                     alt="">
                                <div class="carousel-caption">
                                    Карьер Восточный АО "Полюс"
                                </div>
                            </div>
                            <div class="item  carouselImges">
                                <img class=" img-responsive  center-block" src=@Url.Content("~/Content/images/landing/Content.png")
                                     style="background-image:url(../Content/images/landing/image2.jpg)"
                                     alt="">
                                <div class="carousel-caption">
                                    Большие глаза
                                </div>
                            </div>
                            <div class="item carouselImges">
                                <img class=" img-responsive  center-block" src=@Url.Content("~/Content/images/landing/Content.png")
                                     style="background-image:url(../Content/images/landing/image3.jpg)"
                                     alt="">
                                <div class="carousel-caption">
                                    Здесь все..
                                </div>
                            </div>
                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id='contentShadow' class="col-md-10 col-md-offset-1">
                    <img class="img-responsive"   src=@Url.Content("~/Content/images/landing/contentShadow.png")>
                </div>
            </div>
       

                <div id='account' class="row">
                    <div id='account_registration' class="col-md-4 col-md-offset-1">
                        <p class='h3'>Регистрация</p>
                        <p class="small">Это не отнимет много Вашего времени</p>
                        @using (Html.BeginForm("Register","Landing"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<form class="form-horizontal" role="form">*@
                            <div class="form-group">
                                @*<label for="FullName" class="col-md-3 control-label">Имя</label>*@
                                @Html.LabelFor(model => model.Item1.FullName, htmlAttributes: new { @class = "control-label col-md-4" })
                                @Html.EditorFor(model => model.Item1.FullName, new { htmlAttributes = new { @class = "form-control col-md-9 inputbox tbUser", placeholder = "Полное имя" } })
                                <div class="row">
                                    @Html.ValidationMessageFor(model => model.Item1.FullName, "", new { @class = "text-danger col-md-12" })
                                </div>
                                @*<input type="text" id="tbUser" class='form-control col-md-9 inputbox tbUser' placeholder='Полное имя'>*@
                                @Html.LabelFor(model => model.Item1.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                                @Html.EditorFor(model => model.Item1.Email, new { htmlAttributes = new { @class = "form-control col-md-9 inputbox tbMail", placeholder = "Электронный почтовый ящик" } })
                                <div class="row">
                                    @Html.ValidationMessageFor(model => model.Item1.Email, "", new { @class = "text-danger col-md-12" })
                                </div>
                                @*<input type='email' id="tbMail" class='form-control col-md-9 inputbox tbMail' placeholder='Электронный почтовый ящик'>*@
                            </div>
                            <div class="form-group">

                                <div class='checkboxArea checkbox-inline'>
                                    <input type='checkbox' id='cb1'>
                                    <label for='cb1' class='cbLabelOut'>
                                        <label for='cb1' class='cbLabelIn'></label>
                                    </label>
                                    <label for='cb1' class='label'>Уведомлять о новинках?</label>
                                    <label for='cb1' class='label '>Обещаем не злоупотреблять:)</label>

                                </div>

                            </div>
                            <input type='submit' class='btn btn-default button' value='Регистрация'>
                        @*</form>*@
                        }
                    </div>
                    <div id='vertical_line' class="col-md-2 col-sm-12 ">
                        <img id='content_image' class="img-responsive center-block text-center " src=@Url.Content("~/Content/images/landing/vertical-line.png")>
                    </div>
                    <div id='account_login' class="col-md-4 ">
                        <p class='h3'>Логин</p>
                        <p class="small">Помогите нам вспомнить Вас</p>
                        @using (Html.BeginForm("Login", "Landing"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @*<form class="form-horizontal" role="form">*@
                            <div class="form-group">
                                @Html.LabelFor(model => model.Item2.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                                @Html.EditorFor(model => model.Item2.Email, new { htmlAttributes = new { @class = "form-control col-md-9 inputbox tbMail", placeholder = "ivan.ivanov@mail.ru" } })
                                <div class="row">
                                    @Html.ValidationMessageFor(model => model.Item2.Email, "", new { @class = "text-danger col-md-12" })
                                </div>
                                @*<input type='text' id="tbUser2" class='form-control col-md-9 inputbox tbUser' placeholder='ivan.ivanov@mail.ru'>*@
                                @Html.LabelFor(model => model.Item2.Password, htmlAttributes: new { @class = "control-label col-md-4" })
                                @Html.EditorFor(model => model.Item2.Password, new { htmlAttributes = new { @class = "form-control col-md-9 inputbox tbKey", placeholder = "&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" } })
                                <div class="row">
                                    @Html.ValidationMessageFor(model => model.Item2.Password, "", new { @class = "text-danger col-md-12" })
                                </div>
                                @*<input type='password' id="tbKey" class='form-control col-md-9 inputbox tbKey' placeholder='&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;'>*@
                            </div>
                            <div class="form-group">
                                <div class='checkboxArea checkbox-inline'>
                                    <input type='checkbox' id='cb2'>
                                    <label for='cb2' class='cbLabelOut'>
                                        <label for='cb2' class='cbLabelIn'></label>
                                    </label>
                                    <label for='cb2' class='label'>Запомнить пароль</label>
                                    <label for='cb2' class='label '><a href='#'>Забыли пароль?</a></label>
                                </div>
                            </div>
                            <input type='submit' class='btn btn-default button' value='Войти'>

                        }

                    </div>
                </div>
            </div>
            <footer class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <a href="#"><img class="center-block" src=@Url.Content("~/Content/images/landing/footer-logo.png") alt="Whitesquare logo"></a>
                    </div>
                </div>
            </footer>
</body>
</html>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/default/landing-index.js")

    



